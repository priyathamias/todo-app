<!DOCTYPE html>
<html>
 
<head>
    <title>Todo List</title>
</head>
 
<body>
    <h2>Todo List</h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Task</th>
            <th>Delete</th>
        </tr>
        <% data.forEach(element => { %>
        <tr>
            <td><%= element.todoId %></td>
            <td><%= element.todoTask %></td>
            <td>
                <form action="/delete" method="POST">
                    <input type="hidden" name="todoId" value="<%= element. todoId %>">
                    <input type="hidden" name="todoTask" value="<%= element. todoTask %>">
                    <button class="delete" type="submit">X</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </table>
    <form action="/" method="POST">
        <input type="text" name="todoTask" placeholder="Enter Task">
        <button type="submit">Add</button>
     </form>
</body>
 
</html>